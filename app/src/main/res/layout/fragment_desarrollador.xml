<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.DesarrolladorFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:text="Desarrollador: José Andrés Rodríguez Hernández"/>

    <ImageView
        android:id="@+id/andresFlow"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/andres_con_flow"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">


        <ImageView
            android:id="@+id/imgFacebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/facebook"
            android:layout_marginStart="20sp"
            android:layout_marginTop="15dp" />
        <ImageView
            android:id="@+id/imgInstagram"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/instagram"
            android:layout_marginTop="15dp" />
        <ImageView
            android:id="@+id/imgTwitter"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/twitter"
            android:layout_marginTop="15dp" />
        <ImageView
            android:id="@+id/imgGitHub"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_github"
            android:layout_marginTop="15dp" />
    </LinearLayout>

        <ImageView

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/donut_backgraund"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20sp"/>






</LinearLayout>